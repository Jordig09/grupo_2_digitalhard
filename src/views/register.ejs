<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs',{styles}) %>
  <body>
    <div class="main-container">
      <div class="abarcaForm">
        <div class="logo-mobile">
          <img
            src="../images/digital-hard-large-logo-black.png"
            alt="Digital Hard Logo"
          />
        </div>
        <div class="form">
          <form
            action="/user/register"
            method="post"
            enctype="multipart/form-data"
            class="form-inner"
            id="registrationForm"
          >
            <h2 id="title">Crear cuenta</h2>
            <div class="inputs">
              <label for="txfFirstName">Nombre</label>
              <input
                type="text"
                id="txfFirstName"
                name="firstName"
                placeholder="Nombre"
                value="<%= locals.oldData?.firstName && oldData?.firstName%>"
              />
              <p class="error" id="erFirstName">
                <% if (locals.errors && locals.errors.firstName) { %>
                  <%= errors.firstName.msg %>
                <% }%>
              </p>
              <label for="txfLastName">Apellido</label>
              <input
                type="text"
                id="txfLastName"
                name="lastName"
                placeholder="Apellido"
                value="<%= locals.oldData?.lastName && oldData?.lastName %>"
              />
              <p class="error" id="erLastName">
                <% if (locals.errors && locals.errors.lastName) { %>
                  <%= errors.lastName.msg %>
                <% }%>
              </p>
              <label for="txfEmail">Correo electrónico</label>
              <input
                type="email"
                id="txfEmail"
                name="email"
                placeholder="ejemplo@ejemplo.com"
                value="<%= locals.oldData?.email && oldData?.email %>"
              />
              <p class="error" id="erEmail">
                <% if (locals.errors && locals.errors.email) { %>
                  <%= errors.email.msg %>
                <% }%>
              </p>
              <label for="txfPassword">Contraseña</label>
              <input
                type="password"
                id="txfPassword"
                name="password"
                placeholder="Establece tu contraseña"
              />
              <p class="error" id="erPassword">
                <% if (locals.errors && locals.errors.password) { %>
                  <%= errors.password.msg %>
                <% }%>
              </p>
              <label for="avatar">Imágen de Perfil</label>
              <input
                type="file"
                id="avatar"
                name="avatar"
                accept=".png, .jpg, .jpeg, .webp"
              />
              <button type="submit" id="buttonSubmit">Regístrame</button>
              <button type="button" id="googleLogin">
                <span class="material-icons">account_circle</span> Continua con
                Google
              </button>
            </div>
            <p class="signup-prompt">
              ¿Ya tienes una cuenta?
              <a href="login" class="signup-link">Iniciar sesión</a>
            </p>
          </form>
        </div>
      </div>
      <div class="info"></div>
    </div>
  </body>
  <script src="/js/registerValidation.js"></script>
</html>
