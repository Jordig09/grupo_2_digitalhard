<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs',{styles}) %>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <h2 class="view-title">Editar Usuario</h2>
      <div class="edit-form">
        <form action="/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <section>
            <h4>Información General</h4>
            <div class="input-container">
              <label for="name">Nombre</label>
              <input type="text" id="name" name="name" value="<%= user.name %>" />
            </div>
            <div class="input-container">
              <label for="email">Correo Electrónico</label>
              <input type="email" id="email" name="email" value="<%= user.email %>" />
            </div>
            <div class="input-container">
              <label for="password">Contraseña (dejar en blanco para no cambiar)</label>
              <input type="password" id="password" name="password" />
            </div>
          </section>
          <section>
            <h4>Imagen de Perfil</h4>
            <div class="file-input">
              <input
                type="file"
                id="profilePicture"
                name="profilePicture"
                accept=".png, .jpg, .jpeg, .webp"
              />
            </div>
            <div class="file-info">
              <p><i class="fas fa-info"></i></p>
              <p>Solo están permitidos archivos .png, .jpg, .jpeg y .webp</p>
            </div>
          </section>
          <div class="submit">
            <input type="submit" id="submit" value="Editar Usuario"/>
          </div>
        </form>
        <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
          <div class="submit">
            <input type="submit" id="delete" value="Eliminar Usuario"/>
          </div>
        </form>
      </div>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
  <script src="/js/index.js"></script>
  <!-- Añade cualquier script necesario aquí -->
</html>
